# Voidloop Quest Environment Configuration Template
# Copy this file to .env and update with your values

# Environment (development, staging, production)
ENVIRONMENT=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=6420
TRANSPORT_PORT=6421
MAX_PLAYERS=16
TICK_RATE=60

# Logging
RUST_LOG=info,voidloop=debug

# Lobby Configuration (if using BevyGap lobby)
LOBBY_URL=http://lobby:3000
LOBBY_API_KEY=your-secret-api-key-here

# Database (for lobby)
DATABASE_URL=postgres://voidloop:password@db:5432/lobby
DB_PASSWORD=change-me-in-production

# Security
JWT_SECRET=your-jwt-secret-here

# Docker Registry (for pushing images)
DOCKER_REGISTRY=gcr.io/your-project

# Monitoring
GRAFANA_PASSWORD=admin

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Cloud Provider Settings (optional)
AWS_REGION=us-east-1
GCP_PROJECT=your-project-id
AZURE_SUBSCRIPTION_ID=your-subscription-id
